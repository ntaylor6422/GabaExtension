{
    "name": "Gaba Extension",
    "version": "1.0",
    "description": "Build an Extension!",
    "permissions": ["storage"],
    "content_scripts": [
        {
            "matches": ["https://*.gaba.jp/gis/statistics/*"],
            "js": ["detailsComp.js"]
        },
        {
            "matches": ["https://*.gaba.jp/gis/booking/*"],
            "js": ["booking.js"]
        }
    ],
    "options_page": "options.html",
    "background": {
        "scripts": ["detailsComp.js"],
        "persistent": false
      },
    "manifest_version": 2
}